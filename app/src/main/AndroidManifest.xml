<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="montoya.girona.joan.idi.fib.acook">

    <application
        android:allowBackup="true"
        android:icon="@drawable/food"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Llibre"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Recepta"
            android:label="@string/title_activity_recepta"
            android:parentActivityName=".Llibre"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="montoya.girona.joan.idi.fib.acook.Recepta" />
        </activity>
        <activity
            android:name=".Afegir_Recepta"
            android:label="@string/title_activity_afegir__recepta"
            android:parentActivityName=".Llibre"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="montoya.girona.joan.idi.fib.acook.Llibre" />
        </activity>
    </application>

</manifest>
