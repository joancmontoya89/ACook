<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="montoya.girona.joan.idi.fib.acook.LlibreActivity"
    tools:showIn="@layout/activity_llibre" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inici"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="35dp"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/tvInici" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova recepta"
                android:id="@+id/btnAddRecepta"
                android:layout_marginTop="41dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:onClick="onClickAddRecepta" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:id="@+id/tvReceptes"
                android:text="Receptes"
                android:textStyle="bold"
                android:clickable="true"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_dark" />

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/lvReceptesInici"
                android:layout_height="wrap_content">
            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:text="Tipus de cuina"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:id="@+id/tvTipusCuina"
                android:textColor="@android:color/holo_blue_dark" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lvTipusInici">
            </ListView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
